{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "jsx": "react", // Add this line for JSX support
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/tests/*",
    "/tests/",
    "tests/"
  ]
}
